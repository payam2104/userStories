{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ng-serve",
      "type": "shell",
      "command": "npm run start",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": {
          "regexp": ".*",
          "message": 0
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*?Compiled successfully.*",
          "endsPattern": ".*?Compiled successfully.*"
        }
      }
    }
  ]
}
